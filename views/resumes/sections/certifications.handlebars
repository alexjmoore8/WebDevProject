{{! 
    	},
	"certifications": {
		"section_heading": "Certifications",
		"certification": [
			{
				"name": "Name of certification",
				"authority": "Authority",
				"date": "Jan 2020",
				"link": "https://www.coursera.org/"
			}
		]
	}
 }}

{{#if certifications}}
  <section class="certifications-section">
    <h2 class="section-title">{{certifications.section_heading}}</h2>
    <ul>
      {{#each certifications.certification}}
        <li class="certification">
          <h3 class="certification-name">{{this.name}}</h3>
          {{#if this.date}}
            <h4 class="certification-date">{{this.date}}</h4>
          {{/if}}
          <h5 class="certification-authority">{{this.authority}}</h5>
          {{#if this.link}}
            <a
              class="certification-link"
              href="{{this.link}}"
              target="_blank"
            >{{this.link}}</a>
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </section>
{{/if}}